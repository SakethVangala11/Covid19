<!doctype html>
<html lang="en">
  <head>
 
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <title>State Analysis </title>
   <style> 
.flip-card {
    background-color: transparent;
    width: 120px;
    height: 120px;
    perspective: 1000px;
  }
  
  .flip-card-inner {
    position: relative;
    width: 100%;
    height: 100%;
    text-align: center;
    transition: transform 0.6s;
    transform-style: preserve-3d;
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  }
  
  .flip-card:hover .flip-card-inner {
    transform: rotateY(180deg);
  }
  
  .flip-card-front, .flip-card-back {
    position: absolute;
    width: 100%;
    height: 100%;
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
  }
  
  .flip-card-front {
    background-color:black;
      color: white;
    padding-top:40px ;
  }
  
  .flip-card-back {
    background-color: black;
    color: white;
    padding-top:40px ;
    transform: rotateY(180deg);
  }
   td {
    padding-right: 35px;
  }
  table{
      display: flexbox;
      align-content: center;
      margin: 100px;
  }
  .card{
   width: 18rem;
   background-color: cyan;
  margin: 200px;
  }
  </style>
  </head>
  <body>
    <div class="alert alert-info" role="alert">
     
		<table >
			<tr>
				<td>
		   <div class="flip-card">
			<div class="flip-card-inner" >
			  <div class="flip-card-front" >
				<h5>CONFIRMED</h5>
                </div>
			  <div class="flip-card-back">
				<h3 ><%= summary.total%></h3> 
				
			  </div>
			</div>
      </div>
     
     
</td>

<td>
		  <div class="flip-card">
			<div class="flip-card-inner" >
			  <div class="flip-card-front">
				<h5>ACTIVE</h5>
		       </div>
			  <div class="flip-card-back">
				<h3 ><%= summary.total - ( summary.discharged+ summary.deaths )%></h3> 
				
			  </div>
			</div>
      </div>

</td>
<td>
		  <div class="flip-card">
			<div class="flip-card-inner">
			  <div class="flip-card-front">
				<h5>DISCHARGED</h5>
			                </div>
			  <div class="flip-card-back">
				<h3 ><%= summary.discharged%></h3> 
				
			  </div>
			</div>
		  </div>

</td>
<td>
		  <div class="flip-card">
			<div class="flip-card-inner">
			  <div class="flip-card-front">
				<h5>DEATHS</h5>
                </div>
			  <div class="flip-card-back">
				<h3 ><%= summary.deaths%></h3> 
				
			  </div>
			</div>
      </div>
</td>
		
            </tr>
    </table>
    <table>
      <div class="alert alert-danger" role="alert">
        <h6>Cases expected :</h6>
        <h3 > <%= summary.totalP%></h3> 
      </div>
    </table>
	</div>
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th scope="col">#</th>
        <th scope="col">OBSERVED</th>
        <th scope="col">PREDICTED</th>
      </tr>
    </thead>
    <tbody>
     <% for(var i=0; i!=dateWiseData.length; i++ ){ %>
      <tr>
        <th scope="row"><%= dateWiseData[i].date%></th>
        <td><%= dateWiseData[i].total%></td>
        <td><%= dateWiseData[i].totalP%></td>
       
      </tr>
     <%}%> 
    </tbody>
  </table>
  
